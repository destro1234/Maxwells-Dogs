<h1 class="center"> <%= @dogwalker.name %></h1>

<% if !@dogwalker.walks.empty? %>
  <label class="center" for=""> Existing Walks: </label>
<% end %>


<% @dogwalker.walks.each do |walk| %>
  <a href="/walks/<%= walk.id %>"><li class="center"><%= walk.pickup_time %> - <%= walk.date %></li></a>
<% end %>

<a href="/walks/new"><input class="center" type="button" name="new_walk" value="New Walk"></a>
<a href="/logout"><input class="center" type="button" name="logout" value="Logout"></a>
