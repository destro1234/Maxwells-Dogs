<form action="/walks/<%= @walk.id %>/edit" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <h1><u><%= @walk.date %> - <%= @walk.pickup_time %></u></h1>

  <h3> Dogs: </h3>
    <% @walk.dogs.each do |dog| %>
      <%= dog.name %>
    <% end %>

  <h3>Add a new dog:</h3>

  <label for="dog[name]">Dog: </label>
  <input type="text" name="dog[name]" value="" required>

  <label for="dog[owner_name]">Owner: </label>
  <input type="text" name="dog[owner_name]" value="">

  <label for="dog[address]">Address: </label>
  <input type="text" name="dog[address]" value="" required><br><br>

  <label for="walk[date]">Date: </label>
  <input type="date" name="walk[date]" value="<%= @walk.date %>" min="2019-01-01" max="2019-31-12"><br>

  <label for="walk[pickup_time]">Pickup Time: </label>
  <input type="time" id="pickup_time" name="walk[pickup_time]" value="<%= @walk.pickup_time %>" min="9:00" max="18:00">

  <span>Walk hours are 9am to 6pm</span><br>

  <label for="length">Length of walk,15 or 30mins: </label>
  <input type="text" name="walk[length]" value="<%= @walk.length %>">mins<br>

  <input type="submit" name="submit" value="Submit">


</form>
